
######################################################################
#
PACKAGE_NAME="pkg-config-0.27"
PACKAGE_FILE="${PACKAGE_NAME}.tar.gz"
PACKAGE_DESC=""
SBUS="0.4"  #.04

source D-LFS.functions 

header_log_prep


./configure --prefix=/usr         \
            --with-internal-glib  \
            --docdir=/usr/share/doc/${PACKAGE_NAME}  &>> $BUILD_LOG

make          &>> $BUILD_LOG
make install  &>> $BUILD_LOG

cleanup_log_footer
